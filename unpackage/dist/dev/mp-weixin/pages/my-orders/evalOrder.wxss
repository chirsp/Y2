
.backgroud {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #F1F1F1;
	overflow: hidden;
	display: block;
}
.Order {
	background: rgba(255, 255, 255, 1);
	opacity: 1;
	border-radius: 20rpx;
	margin: 30rpx;
	margin-left: 32rpx;
	padding-left: 32rpx;
	padding: 40rpx;
}
.title {
	width: 357rpx;
	height: 48rpx;
	font-size: 34rpx;
	font-family: PingFang SC;
	font-weight: 500;
	line-height: 34rpx;
	color: rgba(51, 51, 51, 1);
	opacity: 1;
}
.score {
	width: 84rpx;
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 500;
	line-height: 34rpx;
	color: rgba(51, 51, 51, 1);
	opacity: 1;
	margin-top: 28rpx;
}
.Star {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.ViewStar {
	margin-top: 28rpx;
}
.StarImg {
	width: 30rpx;
	height: 30rpx;
	margin-left: 3rpx;
}
.evaluate {
	background: rgba(255, 255, 255, 1);
	border-radius: 20rpx;
	margin: 32rpx;
	padding: 26rpx;
}
.txtarea {
	width: 100%;
	height: 362rpx;
	background: rgba(248, 248, 248, 1);
	border-radius: 20rpx;
	padding-top: 25rpx;
	padding-left: 23rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 300;
	line-height: 34rpx;
	color: rgba(51, 51, 51, 1);
}
.txtImg {
	width: 129rpx;
	height: 129rpx;
	margin-right: 20rpx;
}
.submit {
	width: 100%;
	background: rgba(254, 176, 38, 1);
	position: absolute;
	bottom: 0;
	text-align: center;
	font-size: 36rpx;
	font-weight: 500;
	padding: 30rpx 0;
	color: rgba(255, 255, 255, 1);
}
.ImgList {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: -143rpx;
	position: absolute;
	margin-left: 32rpx;
	z-index: 100;
}
.dele {
	width: 25rpx;
	height: 25rpx;
	position: absolute;
	margin-left: -35rpx;
	margin-top: -5rpx;
}

