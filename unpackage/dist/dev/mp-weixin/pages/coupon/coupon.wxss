.couponList {
  padding: 20rpx 0;
}
.coupon {
  background: #fff;
}
.coupon .coupon-list {
  margin-bottom: 30rpx;
  position: relative;
}
.coupon .coupon-list .content {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  color: #fff;
}
.coupon .coupon-list .content .content-left {
  width: 270rpx;
  padding-right: 50rpx;
  text-align: right;
}
.coupon .coupon-list .content .content-left .price {
  font-weight: bold;
  font-size: 40rpx;
}
.coupon .coupon-list .content .content-left .price2 {
  font-weight: bold;
  font-size: 52rpx;
}
.coupon .coupon-list .content .content-left .conditon {
  padding-top: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 50rpx;
  max-height: 50rpx;
  overflow: hidden;
}
.coupon .coupon-list .content .content-c {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: left;
}
.coupon .coupon-list .content .content-c .name {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
  max-height: 80rpx;
  min-height: 80rpx;
  overflow: hidden;
}
.coupon .coupon-list .content .content-c .conditon2 {
  font-size: 26rpx;
