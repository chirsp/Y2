.nofood {
  background-color: #222222;
  opacity: 0.5;
  position: absolute;
  width: 194rpx;
  height: 194rpx;
  border-radius: 20rpx;
}
.plusNum {
  margin-left: 10rpx;
}
.opcity {
  opacity: 0.7;
  background-color: #EEEEEE;
  border-radius: 10rpx;
}
._goods .item-r {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}
._goods .item-r .media {
    width: 194rpx;
    height: 194rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
    background: #eee;
    position: relative;
}
._goods .item-r .item-content {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    height: 194rpx;
}
._goods .item-r .item-content .name {
      color: #222;
      font-size: 32rpx;
      margin-bottom: 15rpx;
      line-height: 40rpx;
      max-height: 80rpx;
      overflow: hidden;
}
._goods .item-r .item-content .nums {
      color: #888888;
      font-size: 24rpx;
      padding-bottom: 30rpx;
}
._goods .item-r .item-content .price {
      font-size: 30rpx;
      color: #FF1801;
      line-height: 34rpx;
}
._goods .item-r .item-content .oldPrice {
      font-size: 22rpx;
      text-decoration: line-through;
      color: #888888;
      line-height: 34rpx;
      padding-left: 12rpx;
}
._goods .item-r .item-content .btn-icon {
      width: 44rpx;
      height: 44rpx;
}
._goods .item-r .item-content .sale-num {
      width: 50rpx;
      text-align: center;
}

